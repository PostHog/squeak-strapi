{
  "kind": "collectionType",
  "collectionName": "questions",
  "info": {
    "singularName": "question",
    "pluralName": "questions",
    "displayName": "Question",
    "description": ""
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "subject": {
      "type": "string",
      "maxLength": 512,
      "required": true
    },
    "permalink": {
      "type": "uid",
      "targetField": "subject",
      "required": true
    },
    "resolved": {
      "type": "boolean",
      "default": false,
      "required": true
    },
    "body": {
      "type": "richtext",
      "required": true
    },
    "user": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "plugin::users-permissions.user"
    }
  }
}
